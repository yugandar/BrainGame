<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9F6CA"
    android:id="@+id/layoutContainer"
    tools:context="com.example.goa.braingame.SecondActivity">
<!--#29B6F6-->

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        >

        <Button
            android:id="@+id/firstButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/round1"
            android:onClick="secondClick"
            android:tag="0"
            android:text="10"
            android:textSize="30sp" />

        <Button
            android:id="@+id/secondBUtton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginRight="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/round1"
            android:onClick="secondClick"
            android:tag="1"
            android:text="25"
            android:textSize="30sp" />

        <Button
            android:id="@+id/thirdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/round1"
            android:onClick="secondClick"
            android:tag="2"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/fourthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/round1"
            android:onClick="secondClick"
            android:tag="3"
            android:text="30"
            android:textSize="30sp" />
    </GridLayout>

    <Button
        android:id="@+id/quesButton"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/round1"
        android:text="5  * 10"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="67dp"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0/10"
        android:background="#FFEB3B"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="10s"
        android:padding="8dp"
        android:textSize="20sp"
        android:background="#FF9800"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/totalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:background="#AEEA00"
        android:gravity="center"
        android:padding="8dp"
        android:text="Points : 00"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/timerText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
